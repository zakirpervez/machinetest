<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppTheme_Alert_Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme_Country_Item" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/countryItemTextSize</item>
        <item name="android:textStyle">italic|bold</item>
    </style>


    <style name="AppTheme_Weather_Item" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/weatherTvTextSize</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>
